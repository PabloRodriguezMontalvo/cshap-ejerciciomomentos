@model IEnumerable<MvcMomentos.Models.Momento>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo momento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.foto1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.foto2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.foto3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.login)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            <img src="@item.foto1" style="max-width: 100px;"/>
        </td>
        <td>
            <img src="@item.foto2" style="max-width: 100px;" />
        </td>
        <td>
            @if (item.foto3 != null)
            {
                <img src="@item.foto3" style="max-width: 100px;" />
            }
            else
            {
                <h3>Sin foto</h3>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.login)
        </td>
        <td>
           
            @Html.ActionLink("Enviar mensaje", "Correo", new { id=item.id })
        </td>
    </tr>
}

</table>
